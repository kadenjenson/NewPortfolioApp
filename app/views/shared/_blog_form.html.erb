<%= form_for(blog) do |f| %>

<div class="container">
  <div class="jumbotron blogForm">

    <h3>Title</h3>
    <div class="form-group">
      <%= f.text_field :title, class: 'form-control' %>
    </div>

    <h3>Body</h3>
    <div class="form-group">
      <%= f.text_area :body, class: 'form-control', rows: 15 %>
    </div>

    <div>
      <%= f.submit "Submit", class: 'btn btn-primary' %>
      <%= link_to 'Cancel', blogs_path, class: 'btn btn-danger' %>
    </div>

  </div>
</div>


<% end %>