<div class="col-md-4 portfolio-item">
	<div class="parent-el">

		<div class="box">
			<%= image_tag portfolio.thumb_img, class: 'bg' unless portfolio.thumb_img.blank? %>
			<div class="inner-box">
				<span class="top"></span>
				<span class="right"></span>
				<span class="bottom"></span>
				<span class="left"></span>
				<%= link_to portfolio.title, portfolio, class: "btn" %>
			</div>
		</div>

	</div>
</div>

